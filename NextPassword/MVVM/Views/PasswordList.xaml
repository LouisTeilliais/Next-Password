<Page x:Class="NextPassword.MVVM.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NextPassword.MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="Page1"
      Background="#F0F0F0"
      Loaded="Page_Loaded"
      >

    <Grid>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="350,0,0,0" VerticalContentAlignment="Center" VerticalAlignment="Center" Width="1050" Height="600">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                <DataGridTextColumn Header="User Name" Binding="{Binding Username}" />
                <DataGridTextColumn Header="PasswordHash" Binding="{Binding PasswordHash}" />
                <DataGridTextColumn Header="URL" Binding="{Binding Url}" />
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
