<Page x:Class="NextPassword.MVVM.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NextPassword.MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="Page1"
      Background="#F0F0F0"
      Loaded="Page_Loaded"
      >

    <Grid>
        <ListView x:Name="passwordList" HorizontalAlignment="Left" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="352" Height="559" Margin="0,50,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Title}" FontWeight="Bold" />
                        <!-- Autres éléments optionnels à afficher -->
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="Add_Password" HorizontalAlignment="Left" Margin="953,512,0,0" VerticalAlignment="Top" Height="49" Width="124" Click="Add_password"/>
    </Grid>
</Page>
