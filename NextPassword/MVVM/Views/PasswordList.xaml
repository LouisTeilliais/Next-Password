<Page x:Class="NextPassword.MVVM.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NextPassword.MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="850"
      Title="Page1"
      Background="#F0F0F0"
      >

    <Grid>
        <TextBox x:Name="dataAPI" Tag="Mot de passe" HorizontalAlignment="Center" VerticalContentAlignment="Center" Margin="0,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1010" Height="42" Padding="4,0,0,0" TextChanged="TextBox_TextChanged_Password"/>
        <Button Foreground="White" Background="#3B97CB" Content="Fetch data from API" HorizontalAlignment="Left" Margin="319,407,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.918,0.695" Click="Button_Click" Width="176" Height="33"/>

        <TextBox x:Name="passwordInfos" HorizontalAlignment="Center" Margin="0,485,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="850" Height="115" Background="LightGray" IsReadOnly="True"/>
    </Grid>
</Page>
